{
  "name": "@chr33s/pdf",
  "version": "3.0.0",
  "scripts": {
    "check": "oxfmt --check && oxlint --type-aware",
    "fix": "oxfmt && oxlint --type-aware --fix",
    "workspace": "run () { for pkg in brotli restructure standard-fonts unicode-properties upng fontkit pdf-lib; do npm --prefix=packages/$pkg run ${@} --if-present; done }; run"
  },
  "packageManager": "npm@10.0.0+",
  "engines": {
    "node": "^22.18.0"
  },
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "oxfmt": "^0.14.0",
    "oxlint": "^1.29.0",
    "oxlint-tsgolint": "^0.8.0"
  }
}
