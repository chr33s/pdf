{
  "name": "@chr33s/fontkit",
  "version": "1.1.0",
  "description": "An advanced font engine for Node and the browser",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "npm run generate && tsc && npm run copy:shaper-data",
    "clean": "rm -rf dist src/opentype/shapers/*.json src/opentype/shapers/*Data.js",
    "copy:shaper-data": "node ./scripts/copy-shaper-json.ts",
    "generate": "node src/opentype/shapers/generate-data.ts && node src/opentype/shapers/gen-use.ts && node src/opentype/shapers/gen-indic.ts",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@chr33s/brotli": "file:../brotli",
    "@chr33s/restructure": "file:../restructure",
    "@chr33s/unicode-properties": "file:../unicode-properties",
    "base64-arraybuffer": "^1.0.2",
    "clone": "^2.1.2",
    "deep-equal": "^2.2.3",
    "dfa": "^1.2.0",
    "iconv-lite": "^0.7.0",
    "pako": "^2.1.0",
    "tiny-inflate": "^1.0.3",
    "unicode-trie": "^2.0.0"
  },
  "devDependencies": {
    "@types/clone": "^2.1.4",
    "@types/concat-stream": "^2.0.3",
    "@types/deep-equal": "^1.0.4",
    "@types/iconv-lite": "^0.0.1",
    "@types/node": "^24.10.1",
    "@types/pako": "^2.0.4",
    "@types/unicode-trie": "^2.0.3",
    "codepoints": "^1.3.0",
    "concat-stream": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/Hopding/fontkit.git"
  },
  "keywords": [
    "opentype",
    "font",
    "typography",
    "subset",
    "emoji",
    "glyph",
    "layout"
  ],
  "author": "Andrew Dillon <andrew.dillon.j@gmail.com>",
  "contributors": [
    "Devon Govett <devongovett@gmail.com> (http://badassjs.com/)"
  ],
  "bugs": {
    "url": "https://github.com/Hopding/fontkit/issues"
  },
  "license": "MIT",
  "homepage": "https://github.com/Hopding/fontkit"
}
